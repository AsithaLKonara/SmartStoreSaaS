# Production Environment Configuration for SmartStore

# Database Configuration
DB_USER=smartstore_user
DB_PASSWORD=smartstore_secure_password_2024
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@postgres:5432/smartstore

# Redis Configuration
REDIS_PASSWORD=smartstore_redis_password_2024
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379

# Authentication & Security
NEXTAUTH_SECRET=smartstore_production_secret_key_2024_very_long_and_secure
NEXTAUTH_URL=https://yourdomain.com
JWT_SECRET=smartstore_jwt_production_secret_2024_very_long_and_secure
JWT_REFRESH_SECRET=smartstore_jwt_refresh_production_secret_2024_very_long_and_secure
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Application Configuration
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://yourdomain.com

# MFA Configuration
MFA_ISSUER=SmartStore
MFA_ENCRYPTION_KEY=smartstore_mfa_encryption_key_2024_very_long_and_secure

# Password Policy
PASSWORD_MIN_LENGTH=12
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL_CHARS=true
PASSWORD_MAX_AGE_DAYS=90

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false
RATE_LIMIT_SKIP_FAILED_REQUESTS=false

# Security Headers
SECURITY_HEADERS_ENABLED=true
CSP_NONCE_ENABLED=true
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=true
HSTS_PRELOAD=true

# Encryption
ENCRYPTION_KEY=smartstore_encryption_key_2024_very_long_and_secure
ENCRYPTION_ALGORITHM=aes-256-gcm
ENCRYPTION_IV_LENGTH=16

# Session Security
SESSION_SECRET=smartstore_session_secret_2024_very_long_and_secure
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=strict
SESSION_COOKIE_MAX_AGE=3600000

# API Security
API_KEY_HEADER=X-API-Key
API_RATE_LIMIT_ENABLED=true
API_REQUEST_TIMEOUT_MS=30000

# Monitoring & Logging
SENTRY_DSN=your_sentry_dsn_here
LOG_LEVEL=info
SECURITY_LOG_LEVEL=warn
AUDIT_LOG_ENABLED=true

# Grafana Configuration
GRAFANA_PASSWORD=smartstore_grafana_password_2024

# AI Services
OPENAI_API_KEY=your_openai_api_key_here
OLLAMA_BASE_URL=http://localhost:11434

# Payment Gateways
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here
PAYHERE_MERCHANT_ID=your_payhere_merchant_id_here
PAYHERE_SECRET_KEY=your_payhere_secret_key_here

# Messaging Services
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=your_twilio_phone_number_here
FACEBOOK_APP_ID=your_facebook_app_id_here
FACEBOOK_APP_SECRET=your_facebook_app_secret_here
INSTAGRAM_BUSINESS_ACCOUNT_ID=your_instagram_business_account_id_here

# File Storage
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name_here
CLOUDINARY_API_KEY=your_cloudinary_api_key_here
CLOUDINARY_API_SECRET=your_cloudinary_api_secret_here

# Courier APIs
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
